<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.juegoclics">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- MainActivity como actividad principal -->
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- GameActivity: donde se juega el juego -->
        <activity android:name=".GameActivity" />

        <!-- RankingActivity: donde se muestra el ranking -->
        <activity android:name=".RankingActivity" />

        <!-- ContactActivity: pantalla de contacto -->
        <activity android:name=".ContactActivity" />

    </application>

</manifest>
